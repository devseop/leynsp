---
import github from '../assets/github-logo.png';

interface Props {
  githubUrl?: string;
  logoText?: string;
}

const { 
  githubUrl = "https://github.com/devseop",
  logoText = "leynsp*"
} = Astro.props;
---

<header>
  <div class="header-container">
    <div class="left-section">
      <a href="/leynsp/" class="logo">{logoText}</a>
      <nav class="nav-menu">
        <a href="/leynsp/" class="nav-item">Posts</a>
        <a href="/leynsp/playlist" class="nav-item">Playlist</a>
      </nav>
    </div>
    <a href={githubUrl} target="_blank" class="github-icon">
      <img src={github.src} width="24" height="24" alt="GitHub" />
    </a>
  </div>
</header>

<style>
  header {
    background-color: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    position: sticky;
    top: 0;
    width: 100%;
    padding: 1rem 0;
    z-index: 10;
    max-width: 1024px;
    margin: 0 auto;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
  }

  .left-section {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  header .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: #333;
    text-decoration: none;
    display: flex;
    align-items: center;
    transition: color 0.2s;
  }

  header .logo:hover {
    color: #F97642;
  }

  .nav-menu {
    display: flex;
    gap: 2rem;
  }

  .nav-item {
    color: #333;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .nav-item:hover {
    color: #F97642;
  }

  header .github-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
  }

  header .github-icon img {
    width: 24px;
    height: 24px;
  }
</style>
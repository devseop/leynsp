---
import Layout from '../layouts/Layout.astro';
import CoverFlow from '../components/CoverFlow';
import { musics } from '../const/music';
import Header from '../components/Header.astro';
---

<Layout>
  <Header />
  <main>
    <CoverFlow client:load items={musics} />
  </main>
</Layout>

<style>
  main {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: -120px;
  }
</style> 